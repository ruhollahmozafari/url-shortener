# ===========================================
# URL Shortener - Environment Configuration
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=True

# Application
APP_NAME=URL Shortener
APP_VERSION=1.0.0
SECRET_KEY=your-secret-key-here-change-in-production

# Server
HOST=127.0.0.1
PORT=8000

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=sqlite:///./url_shortener.db
# For PostgreSQL (Production):
# DATABASE_URL=postgresql://username:password@localhost:5432/url_shortener
# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/url_shortener

# ===========================================
# URL Shortener Settings
# ===========================================
BASE_URL=http://127.0.0.1:8000
SHORT_URL_LENGTH=5
MAX_RETRIES=5

# Short Code Generation Strategy
# Options: "random", "base62"
SHORT_CODE_STRATEGY=base62
SHORT_CODE_SALT=1256

# ===========================================
# Cache Configuration
# ===========================================
# Options: "redis", "memory", "null"
CACHE_BACKEND=redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ===========================================
# Queue Configuration
# ===========================================
# Options: "redis_streams", "memory"
QUEUE_BACKEND=redis_streams
QUEUE_NAME=url_hits
QUEUE_CONSUMER_GROUP=url_workers
QUEUE_BATCH_SIZE=100
QUEUE_WORKER_INTERVAL=5

# ===========================================
# Analytics Storage Configuration
# ===========================================
# Options: "sqlite", "clickhouse"
HIT_STORAGE_BACKEND=sqlite
HIT_STORAGE_SQLITE_PATH=analytics.db

# ClickHouse (if using)
HIT_STORAGE_CLICKHOUSE_URL=http://localhost:8123
HIT_STORAGE_BUFFER_SIZE=1000

# ===========================================
# Rate Limiting (Optional)
# ===========================================
RATE_LIMIT_PER_MINUTE=60
